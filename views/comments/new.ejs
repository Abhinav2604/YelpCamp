<%- include('../partials/header') -%>
<div class="container">
    <div class="row">
        <h1 class="col-12" style="text-align: center;">Add a new comment to 
            <%= campground.name %>
        </h1>
        <div style="width:30%; margin:25px auto;">
            <form class="col-12" action="/campground/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a class="col-12" href="/campground">Go Back</a>
        </div>

    </div>
</div>
<%- include('../partials/footer') -%>